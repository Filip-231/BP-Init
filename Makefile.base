SHELL := /bin/bash

-include Makefile.common


.PHONY: test
test-unit:: venv
	$(info Executing pytest, coverage, codecov upload & allure report generation [silenced due to secrets]...)
	@. "$(_VENV_ACTIVATE)" && python -m pytest -p tests/unit/


.PHONY: install
install:: pre-install
	echo "Installing requirements, extra requirements & setup.py in editable mode..."; \
		. "$(_VENV_ACTIVATE)" && pip install -r requirements.txt